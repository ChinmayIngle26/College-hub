 rules_version = '2'
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read the announcements collection
    match /announcements/{announcementId} {
      allow read;
    }

    // Allow anyone to read the systemSettings collection
    match /systemSettings/{document=*} {
      allow get;
      // Allow admins to update system settings
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Allow admins to create settings
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Only allow authenticated users to read their own user document
      allow get: if request.auth != null && request.auth.uid == userId;

      // Allow authenticated users to create their own user document on signup,
      // but prevent them from setting their own role to 'admin'
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.role == 'student';

      // Allow authenticated users to update their own user document, but prevent them from
      // changing their role.
      allow update: if request.auth != null && request.auth.uid == userId && request.resource.data.role == resource.data.role;

      // Admins can list all users
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Admins can create, update, and delete any user
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
